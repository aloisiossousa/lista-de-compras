{
  "name": "lista-de-compras",
  "version": "2.0.0",
  "description": "Aplicação web moderna para gerenciamento de listas de compras com controle de orçamento, categorização e persistência de dados",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 3000",
    "serve": "vite preview --port 3000",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "clean": "rimraf dist node_modules/.vite",
    "start": "npm run dev"
  },
  "keywords": [
    "shopping-list",
    "lista-compras",
    "budget-control",
    "javascript",
    "html5",
    "css3",
    "localStorage"
  ],
  "author": "Dev.com",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "vite": "^7.1.5"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/devcom/lista-de-compras.git"
  },
  "bugs": {
    "url": "https://github.com/devcom/lista-de-compras/issues"
  },
  "homepage": "https://github.com/devcom/lista-de-compras#readme"
}
